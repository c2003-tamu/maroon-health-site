<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
  <% if @events.count == 0 %>
    <p>Currently no events</p>
  <%else%>
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
<%end%>
</div>

<%= link_to "New event", new_event_path %>
