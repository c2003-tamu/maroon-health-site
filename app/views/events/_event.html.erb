<div id="<%= dom_id event %>">
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  
  <% if event.class_select? %>
    <p>
      <strong>Open M1/M2 Slots:</strong>
      <%= event.ideal_underclassmen %>
    </p>
    <p>
      <strong>Open M3/M4 Slots:</strong>
      <%= event.ideal_upperclassmen %>
    </p>
  <% else %>
    <p>
      <strong>Open Volunteer Slots:</strong>
      <%= event.ideal_volunteers %>
    </p>
  <% end %>

  <p>
    <strong>Start time:</strong>
    <%= event.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= event.end_time %>
  </p>

  <% member_shifts = MemberShift.where(event_id: event.id) %>
  <% member_names = member_shifts.map { |ms| ms.member.full_name } %>
  <%= member_names.join(', ') %>

</div>
