<%= stylesheet_link_tag 'navbar' %>
<%= csrf_meta_tags %>

<nav class="navbar">
  <button class="navbar-toggle" id="navbar-toggle"> <span class="navbar-toggle-icon">&#9776;</span> </button>
  <ul class="navbar-links" id="navbar-links">
    <div class="logo-container">
      <%= image_tag "MH_icon_small.png", class: "logo" %>
    </div>
    <ul>
        <li><%= link_to "Home", root_path, data: { turbolinks: false } %></li>
        <li><%= link_to "About Us", about_path, data: { turbolinks: false }  %></li>
        <li><%= link_to "Donate", donation_path , data: { turbolinks: false } %></li>
        <li><%= link_to "Calendar", calendar_path , data: { turbolinks: false } %></li>
        <li><%= link_to "Photo Gallery", photos_path %></li>

        <% if current_member && current_member.admin? %>
          <li><%= link_to "Members", members_path %></li>
          <li><%= link_to "Add FAQS", faqs_path %></li>
          <li><%= link_to "Add Resources", resources_path %></li>
          <li><%= link_to "Edit Events", events_path %></li>
          <li><%= link_to "Edit Calendar", calendar_events_path %></li>
        <%end%>

        <% if current_member && (current_member.volunteer? || current_member.admin?)%>
          <li><%= link_to "Medications", medications_path %></li>
          <li><%= link_to "Event Signup", signup_path %></li>
        <% end %>

        <% if current_member %>
          <li class="navbar-item-right"><%= button_to "Logout", destroy_member_session_path, method: :delete, data: { turbo: "false" } %></li>
        <%else%>
          <li class="navbar-item-right"><%= link_to "Login", new_member_session_path %></li>
        <%end%>
  </ul>
</nav>



