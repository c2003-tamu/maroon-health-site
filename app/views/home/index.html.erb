<!-- app/views/home/index.html.erb -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap">
<%= stylesheet_link_tag 'home', media: 'all', 'data-turbo-track': 'reload' %>

<div class="large-logo-container">
  <%= image_tag("logo-text.png", alt: "Maroon Health Logo") %>
</div>

<div class="stat-boxes-container">

    <!-- Patients Served Counter -->
    <div class="stat-box">
        <div class="icon-container">
            <%= image_tag 'icons/heart-plus.svg', class: 'icon' %>
        </div>
        <div class="text-container">
            <p>Patients Served</p>
            <p class="stat"><%= @patients_served %></p>
        </div>
    </div>

    <!-- Operating Since -->
    <div class="stat-box">
        <div class="icon-container">
            <%= image_tag 'icons/clock.svg', class: 'icon' %>
        </div>
        <div class="text-container">
            <p>Operating Since</p>
            <p class="stat">2019</p>
        </div>
    </div>

    <!-- Staff Count -->
    <div class="stat-box">
        <div class="icon-container">
            <%= image_tag 'icons/person.svg', class: 'icon' %>
        </div>
        <div class="text-container">
            <p>Staff Count</p>
            <p class="stat">25</p>
        </div>
    </div>

</div>

<h2 class="mission-statement-title shadow-lg">Our Mission</h2>
<p class="mission-statement-body">Maroon Health Free Clinic is a Texas A&M medical student-run free clinic in Houston operating through a partnership with Open Gate Homeless Ministries. Every other Sunday, we provide medical care to individuals experiencing homelessness in the Montrose neighborhood.</p>
